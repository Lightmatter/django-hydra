{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "apply",
        "tailwind",
        "components",
        "utilities",
        "screen"
      ]
    }],
    "block-no-empty": true,
    "color-no-invalid-hex": true,
    "declaration-colon-space-after": "always",
    "scss/at-import-partial-extension": null,
    "indentation": 2,
    "max-empty-lines": 2,
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ]
  }
}

{% from 'components/util.jinja' import attributes %}
{# date #}
{% macro date(name=none, value=none, id=none, attrs={}) %}
    {% set event_name = "update-"|join(id | replace('_', '-')) if id else "" %}
    {% do attrs.update({"name": name, "value": value}) %}
    <div x-data="date('{{ event_name }}', '{{ value }}')"
         class="w-full input">
        <input class="w-full rounded-md border border-gray-200 px-3 py-2.5" x-ref="picker" type="text" {{ attributes(attrs) }}/>
    </div>
{% endmacro %}
{# django widget to date #}
{% macro widget_to_date(widget) %}
    {{ date(name=widget.name, value=widget.value, id=widget.attrs.id, attrs=widget.attrs) }}
{% endmacro %}

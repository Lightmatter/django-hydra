{% extends "account/account_base.jinja" %}
{% block account_title %}
    {% trans %}
        Set Password
    {% endtrans %}
{% endblock account_title %}
{% block account_content %}
    <form method="post"
          action="{{ url('account_set_password') }}"
          class="password_set">
        {% csrf_token %}
        {{ form }}
        <input type="submit"
               name="action"
               value="{% trans %} Set Password {% endtrans %}"/>
    </form>
{% endblock account_content %}

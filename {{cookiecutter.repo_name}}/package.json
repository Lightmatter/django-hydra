{
  "name": "{{cookiecutter.repo_name}}",
  "version": "{{cookiecutter.version}}",
  "description": "",
  "author": "Lightmatter Team",
  "license": "All rights reserved",
  "engines": {
    "node": "*"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start"
  },
  "devDependencies": {},
  "dependencies": {
    "@material-ui/core": "^4.9.10",
    "next": "^9.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "swr": "^0.2.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint:js:fix",
      "prettier --config .prettierrc.json --debug-check {{cookiecutter.repo_name}}/static_source/js/**/*.js",
      "git add"
    ],
    "*.{css,scss}": [
      "yarn run lint:css:fix",
      "git add"
    ],
    "*.py": [
      "isort {{cookiecutter.repo_name}}/**/*.py",
      "black --exclude=/migrations/ {{cookiecutter.repo_name}}/",
      "git add"
    ]
  }
}

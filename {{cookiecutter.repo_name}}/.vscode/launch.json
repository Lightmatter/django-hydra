{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Django", "Vite"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "poetryInstall"
    },
    {
      "name": "Django Command",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["${input:djangoManage}"],
      "django": true,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "poetryInstall"
    },
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "presentation": { "hidden": true },
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "poetryInstall"
    },
    {
      "name": "Vite",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "presentation": { "hidden": true },
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "npmInstall"
    },
    {
      "name": "Python: Debug Test",
      "type": "python",
      "request": "launch",
      "presentation": { "hidden": true },
      "program": "${file}",
      "purpose": ["debug-test"],
      "justMyCode": false,
      "preLaunchTask": "testSetup"
    }
  ],
  "inputs": [
    {
      "id": "djangoManage",
      "type": "promptString",
      "description": "Django admin commands.",
      "default": "migrate"
    }
  ]
}

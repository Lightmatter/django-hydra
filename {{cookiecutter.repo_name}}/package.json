  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,scss}": [
      "yarn prettier --config .prettierrc.json --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint src/**/*.js --fix",
      "yarn eslint src/**/*.jsx --fix"
    ],
    "*.py": [
      "isort {{cookiecutter.repo_name}}/**/*.py",
      "black --exclude=/migrations/ {{cookiecutter.repo_name}}/"
    ]
  },
  "eslintIgnore": [
    "__tests__"
  ]

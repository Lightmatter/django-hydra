<!DOCTYPE HTML>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <meta property="og:type" content="website" />
        <meta property="fb:app_id" content="TODO" />

        <meta property="og:image" content="TODO" class="metaImage" />
        <meta property="og:image:type" content="image/png" class="metaImageType" />
        <meta property="og:image:width" content="1200" class="metaImageWidth" />
        <meta property="og:image:height" content="1200" class="metaImageHeight" />
        <meta property="og:image:alt" content="A screenshot of the homepage" class="metaImageAlt" />

        <meta property="og:title" content="TODO" class="metaTitle" />
        <meta property="og:description" content="TODO" class="metaDescription" />
        <meta property="og:url" content="TODO" class="metaURL" />

        <link rel="icon" href={{ static("img/favicons/favicon.ico") }} />

        {{ vite_hmr_client() }}
        {{ vite_asset('css/base.js') }}
        {{ vite_asset('js/main.ts') }}
        {{ django_htmx_script() }}
        <title>{% block title required %}{% endblock title %} - Lightmatter</title>
        {% block extra_head %}
        {% endblock extra_head %}
    </head>
    <body hx-boost="true"
          hx-headers='js:{"X-Timezone": Intl.DateTimeFormat().resolvedOptions().timeZone}'
          hx-ext="get-csrf"
          class="{% block bodyclass %}{% endblock bodyclass %}">
        {% include "header/base.jinja" %}
        <div id="app">
            {% block content %}
            {% endblock content %}
            <ul class="messages" id="messages">
                {% include "util/messages.jinja" %}
            </ul>
        </div>
        {% include "footer.jinja" %}
    </body>
</html>

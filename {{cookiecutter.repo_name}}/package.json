    "ts-jest": "^27.0.5",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@babel/core": "^7.14.0",
    "@babel/runtime": "^7.14.0",
    "@date-io/date-fns": "^2.8.0",
